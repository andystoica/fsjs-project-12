extends layout

block content
    div.container.vertical-center
        div.jumbotron-fluid.text-center.w-100.mb-3
            form.container(method='POST', action='/delete')
                div.row
                    div.col-md-8.offset-md-2
                        h3.mb-3 Are you sure you want to delete the user account for 
                            strong #{name}?
                        p User account information and tracking history will be permanently deleted!

                        button.btn.btn-danger.px-3.py-2.mr-2(type='submit') Delete
                        a.btn.btn-primary.px-3.py-2.ml-2(href='/profile', role='button') Cancel