extends layout

block content

    div.vertical-center
        div.container
            div.row
                div.col-md-8.offset-md-2.px-4
                    h2.mt-5.mb-3 #{name}
                    table.table.text-white
                        tbody
                            tr
                                td Email
                                td #{email}
                            tr
                                td Member since
                                td #{registered}
                            tr
                                td Newsletter
                                td #{newsletter}
                            tr
                                td Tracked
                                td n/a
                    a.btn.btn-primary.btn-sm.px-3.py-2(href='#', role='button') Delete account
